{% extends 'base.html.twig' %}

    {% block stylesheets %} 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker3.css"/>
  {% endblock %}

{% block title %}Commander {% endblock %}

{% block body %}
    <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase text-white font-weight-bold">Bienvenue sur le site du mus√©e du Louvre</h1>
          <hr class="my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="font-weight-light text-danger mb-5">Vous pouvez commander vos billets en dessous!</p>
          <a class="btn btn-primary" href="#ticket">Commander vos billets </a>
        </div>
      </div>
    </div>
    </header>
        {% for flashMessage in app.flashes('error') %}

    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Erreur</h4>
        <p>{{ flashMessage }}</p>
    </div>
    {% endfor %}
    <div class="container">
        <div class="col-lg-12 text-center" id="ticket">
    	<div class="card my-4">
              <h5 class="card-header">Achat Ticket</h5>
              <div class="card-body">
              {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.date) }}
                <ul class="tags" data-prototype="{{ form_widget(form.tickets_id.vars.prototype)|e('html_attr') }}">
                </ul>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </div>
    {% endblock %}

    {% block javascripts %}
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/formcollection.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/locales/bootstrap-datepicker.fr.min.js"></script>
    
    <script>
      $(document).ready(function() {
        $('.datevisit').datepicker({
        format: 'yyyy-mm-dd',
        language: 'fr',
        autoclose: 'true',
        startDate:new Date(),
        daysOfWeekDisabled:'2,0',
      });
      });
    </script>
{% endblock %}
